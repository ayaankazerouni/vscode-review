{
  "name": "vscode-review",
  "displayName": "vscode-review",
  "description": "A teaching tool to review local projects and produce HTML reports with markup.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-review.startReview",
        "title": "Start review",
        "when": "!vscode-review.isReviewing"
      },
      {
        "command": "vscode-review.addComment",
        "title": "Add Comment",
        "when": "vscode-review.isReviewing"
      },
      {
        "command": "vscode-review.stopReview",
        "title": "Stop review",
        "when": "vscode-review.isReviewing"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "vscode-review.startReview",
          "when": "!vscode-review.isReviewing"
        },
        {
          "command": "vscode-review.addComment",
          "when": "vscode-review.isReviewing"
        },
        {
          "command": "vscode-review.stopReview",
          "when": "vscode-review.isReviewing"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
